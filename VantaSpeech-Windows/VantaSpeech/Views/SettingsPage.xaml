<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="VantaSpeech.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VantaSpeech.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="24" MaxWidth="600">
            <!-- Server Configuration -->
            <StackPanel Spacing="8">
                <TextBlock Text="Server Configuration" Style="{StaticResource SubtitleTextBlockStyle}" />
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="16">
                        <TextBox
                            Header="Server URL"
                            PlaceholderText="https://your-server.com"
                            Text="{x:Bind ViewModel.ServerUrl, Mode=TwoWay}" />

                        <ToggleSwitch
                            Header="Auto-transcribe"
                            OffContent="Disabled"
                            OnContent="Enabled"
                            IsOn="{x:Bind ViewModel.AutoTranscribe, Mode=TwoWay}" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Audio Quality -->
            <StackPanel Spacing="8">
                <TextBlock Text="Audio Quality" Style="{StaticResource SubtitleTextBlockStyle}" />
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16">
                    <RadioButtons Header="Recording Bitrate">
                        <RadioButton
                            Content="Low (64 kbps) - Smaller files"
                            IsChecked="{x:Bind ViewModel.AudioQuality, Mode=OneWay, Converter={StaticResource AudioQualityLowConverter}}"
                            Command="{x:Bind ViewModel.SetAudioQualityCommand}"
                            CommandParameter="Low" />
                        <RadioButton
                            Content="Medium (96 kbps) - Balanced"
                            IsChecked="{x:Bind ViewModel.AudioQuality, Mode=OneWay, Converter={StaticResource AudioQualityMediumConverter}}"
                            Command="{x:Bind ViewModel.SetAudioQualityCommand}"
                            CommandParameter="Medium" />
                        <RadioButton
                            Content="High (128 kbps) - Best quality"
                            IsChecked="{x:Bind ViewModel.AudioQuality, Mode=OneWay, Converter={StaticResource AudioQualityHighConverter}}"
                            Command="{x:Bind ViewModel.SetAudioQualityCommand}"
                            CommandParameter="High" />
                    </RadioButtons>
                </Border>
            </StackPanel>

            <!-- Integrations -->
            <StackPanel Spacing="8">
                <TextBlock Text="Integrations" Style="{StaticResource SubtitleTextBlockStyle}" />
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16">
                    <StackPanel Spacing="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Confluence" VerticalAlignment="Center" />
                            <TextBlock
                                Grid.Column="1"
                                Text="Not connected"
                                Foreground="{ThemeResource SystemFillColorNeutralBrush}" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Notion" VerticalAlignment="Center" />
                            <TextBlock
                                Grid.Column="1"
                                Text="Not connected"
                                Foreground="{ThemeResource SystemFillColorNeutralBrush}" />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Google Docs" VerticalAlignment="Center" />
                            <TextBlock
                                Grid.Column="1"
                                Text="Not connected"
                                Foreground="{ThemeResource SystemFillColorNeutralBrush}" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- About -->
            <StackPanel Spacing="8">
                <TextBlock Text="About" Style="{StaticResource SubtitleTextBlockStyle}" />
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Version" />
                        <TextBlock
                            Grid.Column="1"
                            Text="1.0.0"
                            Foreground="{ThemeResource SystemFillColorNeutralBrush}" />
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Danger Zone -->
            <Button
                Content="Clear All Recordings"
                Command="{x:Bind ViewModel.ClearAllRecordingsCommand}"
                Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                HorizontalAlignment="Stretch" />
        </StackPanel>
    </ScrollViewer>
</Page>
