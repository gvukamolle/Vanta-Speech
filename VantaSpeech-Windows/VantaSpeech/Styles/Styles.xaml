<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Icon Button Style -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- Record Button Style -->
    <Style x:Key="RecordButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource RecordButtonGradientBrush}" />
        <Setter Property="Width" Value="120" />
        <Setter Property="Height" Value="120" />
        <Setter Property="CornerRadius" Value="60" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <!-- Card Style -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- Featured Card Style -->
    <Style x:Key="FeaturedCardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGradientBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
    </Style>

</ResourceDictionary>
