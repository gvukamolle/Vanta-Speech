<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary colors -->
    <Color x:Key="VantaPrimaryColor">#1A1A2E</Color>
    <Color x:Key="VantaPrimaryLightColor">#2D2D44</Color>
    <Color x:Key="VantaSecondaryColor">#E94560</Color>
    <Color x:Key="VantaSecondaryVariantColor">#FF6B6B</Color>

    <!-- Recording colors -->
    <Color x:Key="RecordingRedColor">#E94560</Color>
    <Color x:Key="RecordingRedLightColor">#FF6B6B</Color>
    <Color x:Key="RecordingGreenColor">#4CAF50</Color>
    <Color x:Key="RecordingAmberColor">#FFB300</Color>

    <!-- Status colors -->
    <Color x:Key="StatusTranscribedColor">#4CAF50</Color>
    <Color x:Key="StatusPendingColor">#FF9800</Color>
    <Color x:Key="StatusUploadingColor">#2196F3</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="VantaPrimaryBrush" Color="{StaticResource VantaPrimaryColor}" />
    <SolidColorBrush x:Key="VantaPrimaryLightBrush" Color="{StaticResource VantaPrimaryLightColor}" />
    <SolidColorBrush x:Key="VantaSecondaryBrush" Color="{StaticResource VantaSecondaryColor}" />
    <SolidColorBrush x:Key="RecordingRedBrush" Color="{StaticResource RecordingRedColor}" />
    <SolidColorBrush x:Key="RecordingGreenBrush" Color="{StaticResource RecordingGreenColor}" />

    <!-- Gradient brushes -->
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource VantaPrimaryColor}" Offset="0" />
        <GradientStop Color="{StaticResource VantaPrimaryLightColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="RecordButtonGradientBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="{StaticResource RecordingRedLightColor}" Offset="0" />
        <GradientStop Color="{StaticResource RecordingRedColor}" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>
